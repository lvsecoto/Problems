<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <declare-styleable name="CheckBox">
        <attr name="checkedColor" format="color" />
        <attr name="unCheckedColor" format="color" />
    </declare-styleable>

    <style name="inputTextLayoutStyle">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="editTextWithSingleLine">
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="formInputLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="formLabel">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="formEditTextSingleLine">
        <item name="android:minLines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">start</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="formEditTextMultiLines">
        <item name="android:minLines">2</item>
        <item name="android:gravity">start</item>
        <item name="android:background">@null</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="formTableRowLabel">
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="formChoose">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@null</item>
    </style>

    <style name="formTableRow">
        <item name="android:gravity">center</item>
        <item name="android:background">@color/foreground</item>
    </style>

    <style name="filterTableRow">
        <item name="android:gravity">center</item>
    </style>

    <style name="filterTableRowEnd" parent="filterTableRow">
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="filterTableRowLabel">
        <item name="android:layout_margin">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
